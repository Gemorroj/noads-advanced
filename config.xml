<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" version="1.3.8dev" id="http://my.opera.com/DitherSky/blog/mod-noads-advanced">
  <name>NoAds Advanced</name>
  <feature name="opera:urlfilter" />
  <feature name="opera:contextmenus" />
  <!-- Core programmers: -->
  <author>Alexey Ruzanov (original version), Dither, Gemorroj, gwarser</author>
  <!-- Contributors: MarioLR, jnsoares -->
  <icon src="icons/icon64.png" width="64" height="64" />
  <icon src="icons/icon18.png" width="18" height="18" />
  <description xml:lang="en">Advertisement blocking filter.</description>
  <description xml:lang="ru">Блокировщик рекламы.</description>
  <description xml:lang="es">Filtro para bloquear publicidad.</description>
  <!-- Initial preferences -->
  <preference name="noads_faq_url" value="https://github.com/Dither/noads-advanced/wiki/FAQ-" />
  <preference name="noads_tb_enabled_state" value="enabled" />
  <preference name="noads_userlist_state" value="enabled" />
  <preference name="noads_list_state" value="enabled" />
  <preference name="noads_magiclist_state" value="disabled" />
  <preference name="noads_userurlfilterlist_state" value="enabled" />
  <preference name="noads_urlfilterlist_state" value="enabled" />
  <preference name="noads_scriptlist_state" value="enabled" />
  <preference name="noads_button_state" value="enabled" />
  <preference name="noads_allrules_state" value="enabled" />
  <preference name="noads_addrules_state" value="disabled" />
  <preference name="noads_debug_enabled_state" value="disabled" />
  <preference name="noads_autoupdate_state" value="enabled" />
  <preference name="noads_autoupdate_notification_state" value="disabled" />
  <preference name="noads_autoupdate_interval" value="86400000" />
  <preference name="noads_disabled" value="disabled" />
  <preference name="noads_menu_enabled" value="disabled" />
