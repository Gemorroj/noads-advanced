<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" version="1.3.2" id="http://my.opera.com/DitherSky/blog/mod-noads-advanced">
  <name>NoAds Advanced</name>
  <feature name="opera:urlfilter"/>
  <author>Dither (based on NoAds by Alexey Ruzanov), gwarser, Gemorroj</author>
  <icon src="icons/icon64.png"/>
  <description>Removes advertisements from sites and that's about it.</description>
  <!--Initial preferences -->
  <preference name="noads_userlist_state" value="enabled"/>
  <preference name="noads_list_state" value="enabled"/>
  <preference name="noads_magiclist_state" value="disabled"/>
  <preference name="noads_userurlfilterlist_state" value="enabled"/>
  <preference name="noads_urlfilterlist_state" value="disabled"/>
  <preference name="noads_scriptlist_state" value="enabled"/>
  <preference name="noads_button_state" value="enabled"/>
  <preference name="noads_allrules_state" value="enabled"/>
  <preference name="noads_addrules_state" value="disabled"/>
  <preference name="noads_debug_enabled_state" value="disabled"/>
  <!--  AdList and URL filter subscription sites. -->
  <!--<access origin="*" subdomains="true"/> -->
  <access origin="https://easylist-downloads.adblockplus.org" subdomains="true"/>
  <access origin="http://fanboy.co.nz.nyud.net" subdomains="true"/>
  <access origin="https://fanboy.co.nz.nyud.net" subdomains="true"/>
  <access origin="http://fanboy.co.nz" subdomains="true"/>
  <access origin="https://fanboy.co.nz" subdomains="true"/>
  <access origin="http://adblocklist.org" subdomains="true"/>
  <access origin="http://pgl.yoyo.org" subdomains="true"/>
  <access origin="http://adblock-chinalist.googlecode.com" subdomains="true"/>
  <access origin="https://adblock-chinalist.googlecode.com" subdomains="true"/>
  <access origin="https://indonesianadblockrules.googlecode.com" subdomains="true"/>
  <access origin="http://stanev.org" subdomains="true"/>
  <access origin="http://lian.info.tm" subdomains="true"/>
  <access origin="http://adblock-plus-japanese-filter.googlecode.com" subdomains="true"/>
  <access origin="https://adblock-plus-japanese-filter.googlecode.com" subdomains="true"/>
  <access origin="http://home.online.no" subdomains="true"/>
  <access origin="http://www.void.gr" subdomains="true"/>
  <access origin="http://sites.google.com" subdomains="true"/>
  <access origin="https://ruadlist.googlecode.com" subdomains="true"/>
  <access origin="http://www.zoso.ro" subdomains="true"/>
  <access origin="http://www.wiltteri.net" subdomains="true"/>
 </widget>
